{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "shortSummary": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text",
      "required": true
    },
    "isArchived": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "string",
      "required": true,
      "regex": "^[a-zA-Z0-9]+(,[a-zA-Z0-9]+)*$"
    }
  }
}
